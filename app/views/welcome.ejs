<%- partial('header') %>

<body class="theme-bright">
	<div class="logo">STICKY</div>

	<div class="welcome">	
		<h1>Welcome to Sticky.IO!</h1>
		
		<!--
			Chat aware
		-->
		<div class="welcome-section accept-friend">
			<span class="number-porn-circle">1</span>
			<div class="verbiage">
				<h2>Chat with Sticky</h2>
				<h3>Head on over to your Gmail or favorite chat client and accept our chat request.</h3>
			</div>
			<img src="/img/welcome-gchat-accept.png" class="screenshot" />
		</div>
		
		<!--
			SMS Confirmation
		-->
		<div class="welcome-section confirm-sms">
			<span class="number-porn-circle">2</span>
			<div class="pull-right">
				<form method="post">
					<input type="text" name="phone_number" placeholder="e.g. (213) 212-7721" />
					<button type="submit" class="btn">Confirm</button>
				</form>
			</div>
			<div class="verbiage">
				<h2>SMS your notes</h2>
				<h3>Enter your cell number to link your account to your phone.</h3>
			</div>
		</div>

		<!--
			Email aware
		-->
		<div class="welcome-section explain-email">
			<span class="number-porn-circle">3</span>
			<div class="verbiage">
				<h2>Send notes via Email</h2>
				<h3>Simply email notes to <a mailto="notes@sticky.io">notes@sticky.io</a> with your gmail username.</h3>
			</div>

			<img src="/img/welcome-gchat-accept.png" class="screenshot" />
		</div>

		<a href="/notes" class="btn btn-primary">Take me to my notes!</a>
	</div>

<%- partial('footer') %>
