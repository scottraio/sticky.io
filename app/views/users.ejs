<!-- Settings Modal -->
<div id="settings" class="modal hide fade">
	<form class="form-horizontal">
		<div class="modal-header">
			<a href="javascript:$('#settings').modal('hide')" class="close">&times;</a>
			<h3>Settings</h3>
		</div>

		<div class="modal-body">
			
		  <div class="control-group">
		    <label class="control-label" for="input_phone_number">Phone Number</label>
		    <div class="controls">
		      <input type="tel"  name="phone_number" id="input_phone_number" placeholder="Enter your phone number" value="<%= current_user.phone_number %>">
		    </div>	
		  </div>

		  <div class="control-group">
		    <label class="control-label" for="input_phone_number">Theme</label>
		    <div class="controls">
		    	<input type="hidden" name="theme" value="<%= current_user.theme %>" />
		      <ul class="themes">
						<li data-value="bright" class="theme-bright-bg"></li>
						<li data-value="desk" class="theme-desk-bg"></li>
						<li data-value="den" class="theme-den-bg"></li>
						<li data-value="black" class="theme-black-bg"></li>
					</ul>
		    </div>
		  </div>

		</div>
		<div class="modal-footer">
			<button type="submit" class="btn danger">Save</button>
			<a href="javascript:$('#settings').modal('hide')" class="btn secondary">Cancel</a>
		</div>
	</form>
</div>


