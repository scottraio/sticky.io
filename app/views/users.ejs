<div id="settings" class="modal hide fade">
	<form class="form-horizontal">
		<div class="modal-header">
			<a href="#" class="close">&times;</a>
			<h3>Settings</h3>
		</div>

		<div class="modal-body">
			
		  <div class="control-group">
		    <label class="control-label" for="input_phone_number">Phone Number</label>
		    <div class="controls">
		      <input type="tel"  name="phone_number" id="input_phone_number" placeholder="Enter your phone number">
		    </div>
		  </div>

		  <div class="control-group">
		    <label class="control-label" for="input_password">Change Password</label>
		    <div class="controls">
		      <input type="password" name="password" id="input_password" placeholder="Enter a new password">
		    </div>
			</div>
			
		</div>
		<div class="modal-footer">
			<button type="submit" class="btn danger">Save</button>
			<a href="javascript:$('#delete-note').modal('hide')" class="btn secondary">Cancel</a>
		</div>
	</form>
</div>

